# ECHOES Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================

# Server-side API key for the Vercel proxy endpoint (optional)
# Only needed if you want to provide a default API key for all users
# Users can still override with their own key via the BYOK feature
GEMINI_API_KEY=

# API tier for rate limiting optimization
# Options: 'free' | 'paid'
# Default: 'free'
GEMINI_API_TIER=free

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Direct API key for local development (bypasses proxy)
# WARNING: Never commit this value or use in production
# This exposes the key in the browser bundle
VITE_GEMINI_API_KEY=

# =============================================================================
# ERROR TRACKING (Optional)
# =============================================================================

# Sentry DSN for error tracking
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=

# Sentry environment
# Options: 'development' | 'staging' | 'production'
VITE_SENTRY_ENVIRONMENT=development

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Vercel Analytics - automatically enabled on Vercel deployments
# No configuration needed

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable debug mode for i18n
VITE_I18N_DEBUG=false
